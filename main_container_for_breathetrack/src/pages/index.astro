---
import MainLayout from '../layouts/MainLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import BoltTimer from '../components/BoltTimer.astro';
import BoltInstructions from '../components/BoltInstructions.astro';
---

<MainLayout title="BOLT Test">
  <Header slot="header" />
  
  <div class="page-container">
    <div class="page-header">
      <h1 class="page-title">Body Oxygen Level Test</h1>
      <p class="page-subtitle">Measure your breathing efficiency and COâ‚‚ tolerance</p>
    </div>
    
    <div class="test-container">
      <BoltTimer />
      
      <BoltInstructions />
    </div>
  </div>
  
  <Footer slot="footer" />
</MainLayout>

<style>
  .test-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
  }
  
  @media (min-width: 768px) {
    .test-container {
      flex-direction: row;
      align-items: flex-start;
      gap: 2rem;
      flex-wrap: wrap;
      justify-content: center;
    }
  }
</style>
