<div id="bolt-timer" class="bolt-timer">
  <div class="timer-display">
    <span id="timer-value">0</span>
    <span class="timer-unit">seconds</span>
  </div>
  
  <div class="timer-controls">
    <button id="start-timer" class="btn btn-primary">Start Test</button>
    <button id="stop-timer" class="btn btn-secondary" disabled>Stop</button>
    <button id="reset-timer" class="btn btn-outline" disabled>Reset</button>
  </div>
  
  <div class="result-display" id="result-display">
    <div class="bolt-score-container" style="display: none;" id="bolt-score-container">
      <h3>Your BOLT Score:</h3>
      <div class="bolt-score" id="bolt-score">--</div>
      <p class="bolt-interpretation" id="bolt-interpretation"></p>
    </div>
  </div>
</div>

<style>
  .bolt-timer {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 2rem 1rem;
    background-color: #fff;
    border-radius: 12px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
    margin-bottom: 2rem;
    width: 100%;
    max-width: 500px;
  }
  
  .timer-display {
    font-size: 5rem;
    font-weight: 700;
    color: #3b82f6;
    margin-bottom: 2rem;
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  
  .timer-unit {
    font-size: 1.5rem;
    color: #6b7280;
    margin-top: -0.5rem;
  }
  
  .timer-controls {
    display: flex;
    gap: 0.75rem;
    margin-bottom: 1.5rem;
  }
  
  .btn {
    padding: 0.75rem 1.5rem;
    border-radius: 8px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.2s ease;
    border: none;
    font-size: 1rem;
  }
  
  .btn-primary {
    background-color: #3b82f6;
    color: white;
  }
  
  .btn-primary:hover {
    background-color: #2563eb;
  }
  
  .btn-secondary {
    background-color: #ef4444;
    color: white;
  }
  
  .btn-secondary:hover {
    background-color: #dc2626;
  }
  
  .btn-outline {
    background-color: transparent;
    border: 1px solid #d1d5db;
    color: #4b5563;
  }
  
  .btn-outline:hover {
    background-color: #f3f4f6;
  }
  
  .btn:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }
  
  .bolt-score-container {
    text-align: center;
    margin-top: 1rem;
    padding: 1.5rem;
    border-radius: 8px;
    background-color: #f0f9ff;
    width: 100%;
  }
  
  .bolt-score {
    font-size: 3.5rem;
    font-weight: 700;
    color: #0284c7;
    margin: 0.5rem 0;
  }
  
  .bolt-interpretation {
    font-size: 1rem;
    color: #4b5563;
    margin-top: 0.5rem;
  }
</style>
